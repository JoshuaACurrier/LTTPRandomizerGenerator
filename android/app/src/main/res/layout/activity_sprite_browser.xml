<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E2E">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/spriteGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:clipToPadding="false"/>

    <!-- Scroll-to-top FAB (hidden by default) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scrollToTopFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:src="@android:drawable/arrow_up_float"
        android:contentDescription="@string/content_desc_scroll_top"
        app:backgroundTint="#3A3A55"
        app:tint="#E0E0F0"
        app:fabSize="mini"
        android:visibility="gone"/>

    <!-- Cancel FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancelFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="@string/content_desc_cancel"
        app:backgroundTint="#AA3333"
        app:tint="#E0E0F0"
        app:fabSize="normal"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
