<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:text="@string/sprite_browser_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#6C63FF"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/headerSearchBox"
        android:hint="@string/sprite_search_hint"
        android:textColor="#E0E0F0"
        android:textColorHint="#555568"
        android:background="#2A2A3E"
        android:padding="10dp"
        android:textSize="14sp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/headerRandomAllBtn"
            android:text="@string/random_all_btn"
            android:backgroundTint="#3A3A55"
            android:textColor="#E0E0F0"
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/headerRandomFavBtn"
            android:text="@string/random_fav_btn"
            android:backgroundTint="#3A3A55"
            android:textColor="#E0E0F0"
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/headerDefaultLinkBtn"
            android:text="@string/default_link_btn"
            android:backgroundTint="#3A3A55"
            android:textColor="#E0E0F0"
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/headerSpriteCount"
            android:textColor="#888899"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/headerLoadingSpinner"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/headerErrorText"
            android:textColor="#FF6B6B"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</LinearLayout>
